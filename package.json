{
    "name": "@coinmeca/wallet-adapter",
    "description": "Coinmeca wallet adapter for Multichain supporting.",
    "version": "0.1.62",
    "keywords": [
        "coinmeca",
        "web3",
        "wallet",
        "adapter",
        "wallet adapter"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/coinmeca/wallet-adapter"
    },
    "author": "Coinmeca Team <dev@coinmeca.net>",
    "license": "MIT",
    "scripts": {
        "watch": "tsc --watch",
        "build": "tsc --build && tsc-alias && tscp",
        "deploy": "npm publish",
        "clean": "rm -rf ./dist ./build ./tsconfig.tsbuildinfo ./node_modules/.cache",
        "prebuild": "yarn clean"
    },
    "sideEffects": false,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "typings": "./dist/index.d.js",
    "files": [
        "./dist"
    ],
    "exports": {
        ".": "./dist/index.js",
        "./*": [
            "./dist/*.js",
            "./dist/*/index.js"
        ],
        "./evm": "./dist/core/evm/index.js",
        "./evm/*": [
            "./dist/core/evm/*.js",
            "./dist/core/evm/*/index.js"
        ],
        "./svm": "./dist/core/svm/index.js",
        "./svm/*": [
            "./dist/core/svm/*.js",
            "./dist/core/svm/*/index.js"
        ]
    },
    "typesVersions": {
        "*": {
            ".": [
                "./dist/index"
            ],
            "*": [
                "./dist/*",
                "./dist/*/index",
                "./dist/index"
            ]
        }
    },
    "dependencies": {
        "@babel/runtime": "^7.26.0",
        "@okxweb3/coin-ethereum": "^1.0.11",
        "eventemitter3": "^5.0.1",
        "lodash": "^4.17.21",
        "node-fetch": "^3.3.2",
        "zustand": "5.0.2"
    },
    "optionalDependencies": {
        "@coinbase/wallet-sdk": "4.2.4",
        "@metamask/detect-provider": "^2.0.0",
        "@metamask/sdk": "0.31.2",
        "@rainbow-me/rainbowkit": "^2.2.1",
        "@solana/wallet-adapter-wallets": "^0.19.32"
    },
    "devDependencies": {
        "@solana/web3.js": "2.0.0",
        "@types/lodash": "^4.17.13",
        "tsc-alias": "^1.8.10",
        "tscp": "^1.0.0",
        "typescript": "^5.7.2",
        "typescript-cp": "^0.1.9"
    },
    "packageManager": "yarn@4.5.1"
}
