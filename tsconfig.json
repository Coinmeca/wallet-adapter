{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["dom", "dom.iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "composite": true,
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true,
        "paths": {
            "": ["./*"],
            "~/*": ["./*"]
        },
        "typeRoots": ["src/types"]
    },
    "include": ["src", "**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
