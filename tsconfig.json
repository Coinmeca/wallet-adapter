{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "paths": {
            "": ["./*"],
            "~/*": ["./*"]
        },
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": ["src", "*.ts", "*.tsx"],
    "exclude": ["node_modules", "**/.*/", "tsup.config.json", "tsup.config.ts", "dist", "build"]
}
